<!--Controls the layout of each page-->
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"]</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </head>

    <body>
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container">
                    <a class="navbar-brand" href="/Admin">UIS</a>
                    <ul class="nav navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a role="button" class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown" aria-expanded="false">
                                Entities
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/Admin/Students">Students</a></li>
                                <li><a class="dropdown-item" href="/Admin/Teachers">Teachers</a></li>
                                <li><a class="dropdown-item" href="/Admin/Lectures">Lectures</a></li>
                                <li><a class="dropdown-item" href="/Admin/Groups">Groups</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a role="button" class="nav-link" href="/Admin/Elasticsearch">Elasticsearch</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2021 - 2023 - Presentation - <a asp-area="" asp-page="/Privacy">Privacy</a>
            </div>
        </footer>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>

        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
